<% content_for :title, "Articles" %>

<h1>Articles</h1>

<div class="search-filter-section">
  <%= form_with url: articles_path, method: :get, class: "search-form" do |f| %>
    <div class="search-controls">
      <div class="search-group">
        <%= f.text_field :search, value: params[:search], placeholder: "Search articles...", class: "form-control search-input" %>
        <%= f.submit "Search", class: "btn btn-primary btn-sm" %>
      </div>
      <div class="filter-group">
        <%= f.select :status, 
            options_for_select([["All Articles", ""], ["Published", "published"], ["Drafts", "draft"]], params[:status]),
            {}, 
            class: "form-control filter-select" %>
      </div>
      <% if params[:search].present? || params[:status].present? %>
        <%= link_to "Clear Filters", articles_path, class: "btn btn-secondary btn-sm" %>
      <% end %>
    </div>
  <% end %>
</div>

<% if @articles.any? %>
  <div class="articles-stats">
    <p>Showing <%= @articles.count %> <%= "article".pluralize(@articles.count) %></p>
  </div>
  
  <div class="articles-grid">
    <% @articles.each do |article| %>
      <div class="article-card">
        <h2 class="article-title"><%= article.title %></h2>
        <div class="article-meta">
          <span>By <%= article.author %></span>
          <span class="badge <%= article.published ? 'badge-published' : 'badge-draft' %>">
            <%= article.published_status %>
          </span>
        </div>
        <div class="article-content">
          <%= truncate(article.content, length: 150) %>
        </div>
        <div class="article-actions">
          <%= link_to "View Article", article, class: "btn btn-primary btn-sm" %>
          <%= link_to "Edit", edit_article_path(article), class: "btn btn-secondary btn-sm" %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="empty-state">
    <% if params[:search].present? || params[:status].present? %>
      <p>No articles found matching your search criteria.</p>
      <%= link_to "Clear Filters", articles_path, class: "btn btn-secondary" %>
    <% else %>
      <p>No articles found. Start by creating your first article!</p>
      <%= link_to "Create New Article", new_article_path, class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>
