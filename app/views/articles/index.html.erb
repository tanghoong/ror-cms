<% content_for :title, "Articles" %>

<h1>Articles</h1>

<% if @articles.any? %>
  <div class="articles-grid">
    <% @articles.each do |article| %>
      <div class="article-card">
        <h2 class="article-title"><%= article.title %></h2>
        <div class="article-meta">
          <span>By <%= article.author %></span>
          <span class="badge <%= article.published ? 'badge-published' : 'badge-draft' %>">
            <%= article.published_status %>
          </span>
        </div>
        <div class="article-content">
          <%= truncate(article.content, length: 150) %>
        </div>
        <div class="article-actions">
          <%= link_to "View Article", article, class: "btn btn-primary btn-sm" %>
          <%= link_to "Edit", edit_article_path(article), class: "btn btn-secondary btn-sm" %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="empty-state">
    <p>No articles found. Start by creating your first article!</p>
    <%= link_to "Create New Article", new_article_path, class: "btn btn-primary" %>
  </div>
<% end %>
