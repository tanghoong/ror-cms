<div class="form-container">
  <%= form_with(model: article) do |form| %>
    <% if article.errors.any? %>
      <div class="alert-errors">
        <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
        <ul>
          <% article.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control", placeholder: "Enter article title..." %>
    </div>

    <div class="form-group">
      <%= form.label :content, class: "form-label" %>
      <%= form.text_area :content, class: "form-control", placeholder: "Write your article content here...", rows: 10 %>
    </div>

    <div class="form-group">
      <%= form.label :author, class: "form-label" %>
      <%= form.text_field :author, class: "form-control", placeholder: "Author name..." %>
    </div>

    <div class="form-group form-checkbox">
      <%= form.check_box :published %>
      <%= form.label :published, "Publish this article" %>
    </div>

    <div class="form-group">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
